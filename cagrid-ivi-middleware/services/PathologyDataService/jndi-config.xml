<?xml version="1.0" encoding="UTF-8"?>
<jndiConfig xmlns="http://wsrf.globus.org/jndi/config">
  <service name="SERVICE-INSTANCE-PREFIX/PathologyDataService">
    <resource name="configuration" type="gov.nih.nci.ivi.pathologydataservice.service.globus.resource.PathologyDataServiceResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/PathologyDataService_registration.xml</value>
        </parameter>
        <parameter>
          <name>serviceMetadataFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the serviceMetadata extract -->
          <value>ETC-PATH/serviceMetadata.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="serviceconfiguration" type="gov.nih.nci.ivi.pathologydataservice.service.PathologyDataServiceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>etcDirectoryPath</name>
          <value>ETC-PATH</value>
        </parameter>
        <parameter>
          <name>queryProcessorClass</name>
          <value>@queryProcessorClass@</value>
        </parameter>
        <parameter>
          <name>serverConfigLocation</name>
          <value>ETC-PATH/@serverConfigLocation@</value>
        </parameter>
        <parameter>
          <name>dataService_cqlValidatorClass</name>
          <value>@dataService_cqlValidatorClass@</value>
        </parameter>
        <parameter>
          <name>dataService_domainModelValidatorClass</name>
          <value>@dataService_domainModelValidatorClass@</value>
        </parameter>
        <parameter>
          <name>dataService_validateCqlFlag</name>
          <value>@dataService_validateCqlFlag@</value>
        </parameter>
        <parameter>
          <name>dataService_validateDomainModelFlag</name>
          <value>@dataService_validateDomainModelFlag@</value>
        </parameter>
        <parameter>
          <name>dataService_classMappingsFilename</name>
          <value>ETC-PATH/@dataService_classMappingsFilename@</value>
        </parameter>
        <parameter>
          <name>tmpStorage</name>
          <value>ETC-PATH/@tmpStorage@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_rootDir</name>
          <value>@cqlQueryProcessorConfig_rootDir@</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="gov.nih.nci.ivi.pathologydataservice.service.globus.resource.PathologyDataServiceResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
      </resourceParams>
    </resource>
  </service>
</jndiConfig>

